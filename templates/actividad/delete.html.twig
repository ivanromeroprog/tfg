{% extends 'base_users.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Edu-track - Actividades
{% endblock %}
{% block bodytitle %}Eliminar Actividad
{% endblock %}

{% block body %}

	<div class="alert alert-danger">
		<p class="fw-bold">¿Está seguro de eliminar este Actividad?</p>
	</div>

	<form action="{{ path('app_actividad_dodelete') }}" method="POST">

		<input type="hidden" name="id" value="{{ form.vars.value.id }}"/>
		<input type="hidden" name="_method" value="DELETE"/>
		<input type="hidden" name="_token" value="{{ csrf_token('borrarcosa') }}"/>
		<input type="submit" value="Eliminar" class="btn btn-danger" style="float: right"/><a href="{{ path('app_actividad') }}" class="btn btn-secondary mb-4">Volver</a>

	</form>

	{{ include('actividad/form.html.twig', with_context = true) }}

{% endblock %}
