{% extends 'base_users.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Edu-track - Cursos{% endblock %}
{% block bodytitle %}Curso{% endblock %}

{% block body %}

    {{ include('alert.html.twig', with_context = true) }}

    {{ form_start(form) }}
    <button class="default-button-handler" value="default-button" name="default-button"></button>
    <div class="row">
        <div class="col-sm">{{ form_row(form.grado) }}</div>
        <div class="col-sm">{{ form_row(form.division) }}</div>
    </div>
    {{ form_row(form.materia) }}
    {{ form_row(form.anio) }}
    {{ form_row(form.organizacion) }}
{% if (app.flashes('success-alumnos')|length > 0) %}
<a id="mensajea" data-controller="scroll" data-scroll-location-value="mensajea"></a>
{% endif %}
{% for message in app.flashes('success-alumnos') %}
    <div class="alert alert-success alert-dismissible fade show animate__animated animate__fadeInDown" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}
        <div {{ stimulus_controller('alumno') }}>
            <h4>Alumnos</h4>
            {{ form_row(form.alumnos) }}
            <div class="row collapse mb-3" id="agregar_alumno_form">
                <div class="col-md-4">
                    {{ form_row(form.alumno_nombre) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.alumno_apellido) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.alumno_cua) }}
                </div>
                <div class="col-md-2 d-flex align-items-end justify-content-center">
                    {{ form_row(form.alumno_agregar) }}
                </div>
            </div>
        </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
    <a href="{{ path('app_curso') }}" class="btn btn-secondary">Volver</a>

{% endblock %}
