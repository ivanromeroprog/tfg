{% extends 'base.html.twig' %}

{% block title %}Edu-track - Cursos
{% endblock %}
{% block bodytitle %}Cursos
{% endblock %}

{% block body %}
    {{ include('alert.html.twig', with_context = true) }}

    <form method="get" action="{{ app.request.uri }}">
        <div class="row">
            <div class="col-3">
                <a href="{{ path('app_curso_new') }}" class="btn btn-success">
                    <i class="bi bi-plus-circle-fill"></i> Nuevo</a>
            </div>
            <div class="col-md-3 text-md-end">
                <label class="align-middle mt-1" for="perpage">Mostrar: </label>
            </div>
            <div class="col-md-3">
                <select class="form-select" name="perpage" id="perpage">
                    <option>10</option>
                    <option>25</option>
                    <option>50</option>
                    <option>100</option>
                </select>
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    <input type="text" name="search" class="form-control falserequired" placeholder="Buscar..." aria-label="Buscar..." aria-describedby="button-search">
                    <button class="btn btn-primary" type="submit" id="button-search"><i class="bi bi-search"></i></button>
                </div>
            </div>

        </div>
    </form>
    <table class="table table-striped table-sm" id="tabla">
        <thead>
            <tr>
                <th>Id</th>
                <th>Grado - División</th>
                <th>Materia</th>
                <th>Año Lectivo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for curso in pager %}
                <tr>
                    <td>{{ curso.Id }}</td>
                    <td>{{ curso.Grado }} {{ curso.division }}</td>
                    <td>{{ curso.Materia }}</td>
                    <td>{{ curso.Anio }}</td>
                    <td>
                        <a href="{{ path('app_curso_view',{'id':curso.id}) }}" class="btn btn-primary btn-sm" title="Ver"><i class="bi bi-eye"></i></a>

                        <a href="{{ path('app_curso_edit',{'id':curso.id}) }}" class="btn btn-primary btn-sm" title="Editar">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a href="{{ path('app_curso_delete',{'id':curso.id}) }}" class="btn btn-danger btn-sm" title="Eliminar">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ pagerfanta(pager, null,
        {
            'routeParams': {'perpage': perpage},
        }) }}

{% endblock %}
