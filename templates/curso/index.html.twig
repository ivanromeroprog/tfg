{% extends 'base.html.twig' %}

{% block title %}Edu-track - Cursos
{% endblock %}
{% block bodytitle %}Cursos
{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <a href="{{ path('app_curso_new') }}" class="btn btn-success">
        <i class="bi bi-plus-circle-fill"></i>
        Nuevo</a>
    <table class="table table-striped table-sm" id="tabla">
        <thead>
            <tr>
                <th>Id</th>
                <th>Grado - División</th>
                <th>Materia</th>
                <th>Año Lectivo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for curso in cursos %}
                <tr>
                    <td>{{ curso.Id }}</td>
                    <td>{{ curso.Grado }} {{ curso.division }}</td>
                    <td>{{ curso.Materia }}</td>
                    <td>{{ curso.Anio }}</td>
                    <td>
                        <a href="{{ path('app_curso_view',{'id':curso.id}) }}" class="btn btn-primary btn-sm" title="Ver"><i class="bi bi-eye"></i></a>

                        <a href="{{ path('app_curso_edit',{'id':curso.id}) }}" class="btn btn-primary btn-sm" title="Editar">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a href="{{ path('app_curso_delete',{'id':curso.id}) }}" class="btn btn-danger btn-sm" title="Eliminar">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
